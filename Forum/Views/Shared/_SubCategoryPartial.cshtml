<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Published by</th>
            <th scope="col">Published on</th>
        </tr>
    </thead>
    @foreach (var post in Model)
    {
        var postContent = post.Contents;

        if (post.Contents.Length > 150)
        {
            postContent = post.Contents.Substring(0, 150) + " ...";
        }
        <tr>
            <td>
                <a href="" class="text-white">@post.Title</a>
            </td>
            <td>
                <a href="/Post/Discussion?postId=@post.Id" class="text-white">@postContent</a>
            </td>
            <td>
                <a class="text-white">@post.Creator</a>
            </td>
            <td>
                <a class="text-white">@post.PublishedOn</a>
            </td>
        </tr>
           
    }
</table>
